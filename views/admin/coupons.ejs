<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coupons - PUFFSNMORE Admin</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    
    <style>
        .sidebar {
            background-color: #1e293b;
            color: white;
            width: 256px;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
        }
        
        .sidebar-link {
            display: flex;
            align-items: center;
            padding: 12px 24px;
            color: #f8fafc;
            transition: all 0.2s;
        }
        
        .sidebar-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
        
        .sidebar-link.active {
            background-color: rgba(255, 255, 255, 0.2);
        }
        
        .sidebar-icon {
            width: 20px;
            margin-right: 12px;
            text-align: center;
        }
        
        .content-area {
            margin-left: 256px;
            padding: 24px;
            min-height: 100vh;
            background-color: #f8fafc;
        }
        
        .card {
            background-color: white;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }
        
        .form-input {
            width: 100%;
            padding: 0.75rem 1rem;
            border-radius: 0.375rem;
            border: 1px solid #e2e8f0;
            background-color: #f8fafc;
            transition: all 0.2s;
        }
        
        .form-input:focus {
            outline: none;
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
            background-color: white;
        }
        
        .btn-primary {
            background-color: #3b82f6;
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 0.375rem;
            font-weight: 600;
            transition: all 0.2s;
            border: none;
        }
        
        .btn-primary:hover {
            background-color: #2563eb;
        }
        
        .coupon-item {
            background-color: #4f46e5;
            color: white;
            padding: 0.75rem 1rem;
            border-radius: 0.375rem;
            margin-bottom: 0.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .action-btn {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            transition: all 0.2s;
        }
        
        .success-alert {
            background-color: #d1fae5;
            border-left: 4px solid #10b981;
            color: #065f46;
            padding: 1rem;
            margin-bottom: 1rem;
            border-radius: 0.25rem;
            display: flex;
            align-items: center;
        }
    </style>
</head>

<body class="bg-gray-100">
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="p-4 flex items-center">
            <img src="/pups logo.png" alt="PUFFSNMORE" class="h-10 mr-3">
            <h1 class="text-xl font-bold">PUFFSNMORE</h1>
        </div>
        
        <nav class="mt-6">
            <a href="/admin" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-th-large"></i></span>
                Admin Dashboard
            </a>
            
            <a href="/admin/users" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-users"></i></span>
                Users
            </a>
            
            <a href="/admin/admins" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-user-shield"></i></span>
                Admins
            </a>
            
            <a href="/admin/coupons" class="sidebar-link active">
                <span class="sidebar-icon"><i class="fas fa-tags"></i></span>
                Coupons
            </a>
            
            <a href="/admin/orders" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-shopping-cart"></i></span>
                Orders
            </a>
            
            <a href="/admin/products" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-box"></i></span>
                All Products
            </a>
            
            <a href="/admin/create" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-plus-circle"></i></span>
                Create Product
            </a>
            
            <a href="/admin/categories" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-folder"></i></span>
                Categories
            </a>
            
            <a href="/admin/subcategories" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-folder-open"></i></span>
                Sub Categories
            </a>
            
            <a href="/admin/analytics" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-chart-bar"></i></span>
                Order Analytics
            </a>
            
            <a href="/admin/banners/website" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-image"></i></span>
                Website Banners
            </a>
            
            <a href="/admin/banners/app" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-mobile-alt"></i></span>
                App Banners
            </a>
            
            <a href="/admin/topbars" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-window-maximize"></i></span>
                TopBars
            </a>
            
            <a href="/admin/offers" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-gift"></i></span>
                Home Screen Offers
            </a>
        </nav>
    </div>
    
    <!-- Main Content -->
    <div class="content-area">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-800">Create a Coupon</h1>
        </div>
        
        <!-- Success Alert (conditionally rendered) -->
        <div class="success-alert mb-6">
            <i class="fas fa-check-circle mr-2 text-xl"></i>
            <div>
                <p class="font-bold">Success!</p>
                <p>Coupon E23WBHJ has been successfully created.</p>
            </div>
            <button class="ml-auto text-green-700 hover:text-green-900">
                <i class="fas fa-times"></i>
            </button>
        </div>
        
        <!-- Create Coupon Form -->
        <div class="card mb-8">
            <form action="/admin/coupons/create" method="POST">
                <div class="mb-4">
                    <label for="couponName" class="block text-sm font-medium text-gray-700 mb-1">Coupon Name</label>
                    <input type="text" id="couponName" name="name" class="form-input" placeholder="Coupon name" required>
                </div>
                
                <div class="mb-4">
                    <label for="discount" class="block text-sm font-medium text-gray-700 mb-1">Discount (%)</label>
                    <input type="number" id="discount" name="discount" class="form-input" placeholder="0" min="0" max="100" required>
                </div>
                
                <div class="mb-4">
                    <label for="startDate" class="block text-sm font-medium text-gray-700 mb-1">Start Date</label>
                    <input type="date" id="startDate" name="startDate" class="form-input" required>
                </div>
                
                <div class="mb-6">
                    <label for="endDate" class="block text-sm font-medium text-gray-700 mb-1">End Date</label>
                    <input type="date" id="endDate" name="endDate" class="form-input" required>
                </div>
                
                <div>
                    <button type="submit" class="btn-primary">Add Coupon</button>
                </div>
            </form>
        </div>
        
        <!-- Coupons List -->
        <div class="card">
            <h2 class="text-xl font-bold text-gray-800 mb-4">Active Coupons</h2>
            
            <div class="coupons-list">
                <div class="coupon-item">
                    <div>
                        <span class="font-bold">E23WBHJ</span>
                        <span class="ml-4">10%</span>
                    </div>
                    <div class="flex space-x-2">
                        <button class="action-btn bg-white text-blue-600 hover:bg-blue-50">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="action-btn bg-white text-red-600 hover:bg-red-50">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
                
                <div class="coupon-item">
                    <div>
                        <span class="font-bold">SUMMER25</span>
                        <span class="ml-4">25%</span>
                    </div>
                    <div class="flex space-x-2">
                        <button class="action-btn bg-white text-blue-600 hover:bg-blue-50">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="action-btn bg-white text-red-600 hover:bg-red-50">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
                
                <div class="coupon-item">
                    <div>
                        <span class="font-bold">WELCOME15</span>
                        <span class="ml-4">15%</span>
                    </div>
                    <div class="flex space-x-2">
                        <button class="action-btn bg-white text-blue-600 hover:bg-blue-50">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="action-btn bg-white text-red-600 hover:bg-red-50">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        // Close alert functionality
        document.querySelector('.success-alert button').addEventListener('click', function() {
            document.querySelector('.success-alert').style.display = 'none';
        });
        
        // Date validation
        document.getElementById('endDate').addEventListener('change', function() {
            const startDate = new Date(document.getElementById('startDate').value);
            const endDate = new Date(this.value);
            
            if (endDate < startDate) {
                alert('End date cannot be before start date');
                this.value = '';
            }
        });
    </script>
</body>
</html> 