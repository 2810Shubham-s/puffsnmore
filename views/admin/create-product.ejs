<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Product - PUFFSNMORE Admin</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Tailwind CSS -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    
    <style>
        .sidebar {
            background-color: #1e293b;
            color: white;
            width: 256px;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
        }
        
        .sidebar-link {
            display: flex;
            align-items: center;
            padding: 12px 24px;
            color: #f8fafc;
            transition: all 0.2s;
        }
        
        .sidebar-link:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
        
        .sidebar-link.active {
            background-color: rgba(255, 255, 255, 0.2);
        }
        
        .sidebar-icon {
            width: 20px;
            margin-right: 12px;
            text-align: center;
        }
        
        .content-area {
            margin-left: 256px;
            padding: 24px;
            min-height: 100vh;
            background-color: #f8fafc;
        }
        
        .card {
            background-color: white;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }
        
        .form-input {
            width: 100%;
            padding: 0.75rem 1rem;
            border-radius: 0.375rem;
            border: 1px solid #e2e8f0;
            background-color: #f8fafc;
            transition: all 0.2s;
        }
        
        .form-input:focus {
            outline: none;
            border-color: #6b21a8;
            box-shadow: 0 0 0 3px rgba(107, 33, 168, 0.1);
            background-color: white;
        }
        
        .form-label {
            font-size: 0.875rem;
            font-weight: 500;
            color: #4b5563;
            margin-bottom: 0.5rem;
            display: block;
        }
        
        .submit-btn {
            background-color: #6b21a8;
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 0.375rem;
            font-weight: 600;
            transition: all 0.2s;
            border: none;
        }
        
        .submit-btn:hover {
            background-color: #581c87;
        }
        
        .file-input-label {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0.75rem 1.5rem;
            background-color: #f3f4f6;
            border: 2px dashed #d1d5db;
            border-radius: 0.375rem;
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .file-input-label:hover {
            background-color: #e5e7eb;
            border-color: #9ca3af;
        }
        
        .required::after {
            content: " *";
            color: #ef4444;
        }
    </style>
</head>

<body class="bg-gray-100">
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="p-4 flex items-center">
            <img src="/pups logo.png" alt="PUFFSNMORE" class="h-10 mr-3">
            <h1 class="text-xl font-bold">PUFFSNMORE</h1>
        </div>
        
        <nav class="mt-6">
            <a href="/admin/dashboard" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-th-large"></i></span>
                Admin Dashboard
            </a>
            
            <a href="/admin/users" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-users"></i></span>
                Users
            </a>
            
            <a href="/admin/admins" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-user-shield"></i></span>
                Admins
            </a>
            
            <a href="/admin/coupons" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-tags"></i></span>
                Coupons
            </a>
            
            <a href="/admin/orders" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-shopping-cart"></i></span>
                Orders
            </a>
            
            <a href="/admin/products" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-box"></i></span>
                All Products
            </a>
            
            <a href="/admin/products/create" class="sidebar-link active">
                <span class="sidebar-icon"><i class="fas fa-plus-circle"></i></span>
                Create Product
            </a>
            
            <a href="/admin/categories" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-folder"></i></span>
                Categories
            </a>
            
            <a href="/admin/subcategories" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-folder-open"></i></span>
                Sub Categories
            </a>
            
            <a href="/admin/analytics" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-chart-bar"></i></span>
                Order Analytics
            </a>
            
            <a href="/admin/banners/website" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-image"></i></span>
                Website Banners
            </a>
            
            <a href="/admin/banners/app" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-mobile-alt"></i></span>
                App Banners
            </a>
            
            <a href="/admin/topbars" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-window-maximize"></i></span>
                TopBars
            </a>
            
            <a href="/admin/offers" class="sidebar-link">
                <span class="sidebar-icon"><i class="fas fa-gift"></i></span>
                Home Screen Offers
            </a>
        </nav>
    </div>
    
    <!-- Main Content -->
    <div class="content-area">
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-800">Create a Product</h1>
        </div>
        
        <form action="/admin/products/create" method="POST" enctype="multipart/form-data" class="card">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Product Name -->
                <div>
                    <label for="name" class="form-label required">Name</label>
                    <input type="text" id="name" name="name" class="form-input" placeholder="Name" required>
                </div>

                <!-- Description -->
                <div>
                    <label for="description" class="form-label required">Description</label>
                    <textarea id="description" name="description" class="form-input h-24" placeholder="Description" required></textarea>
                </div>

                <!-- Brand -->
                <div>
                    <label for="brand" class="form-label">Brand</label>
                    <input type="text" id="brand" name="brand" class="form-input" placeholder="Brand">
                </div>

                <!-- SKU -->
                <div>
                    <label for="sku" class="form-label required">SKU</label>
                    <input type="text" id="sku" name="sku" class="form-input" placeholder="SKU" required>
                </div>

                <!-- Discount -->
                <div>
                    <label for="discount" class="form-label required">Discount</label>
                    <input type="number" id="discount" name="discount" class="form-input" placeholder="0" min="0" max="100" value="0" required>
                </div>

                <!-- Select Color -->
                <div>
                    <label for="color" class="form-label required">Select Color</label>
                    <p class="text-xs text-gray-500 mb-1">Pick a color for the product</p>
                    <input type="text" id="color" name="color" class="form-input" placeholder="Choose a product color" required>
                </div>

                <!-- Pick a Product Color Image -->
                <div>
                    <label for="colorImage" class="form-label required">Pick a Product Color image</label>
                    <label for="colorImage" class="file-input-label">
                        <input type="file" id="colorImage" name="colorImage" class="hidden" accept="image/*" required>
                        <span>Choose file</span>
                    </label>
                </div>

                <!-- Parent -->
                <div>
                    <label for="parent" class="form-label">Parent</label>
                    <select id="parent" name="parent" class="form-input">
                        <option value="">Select a parent</option>
                        <option value="parent1">Parent 1</option>
                        <option value="parent2">Parent 2</option>
                    </select>
                </div>

                <!-- Category -->
                <div>
                    <label for="category" class="form-label required">Category</label>
                    <select id="category" name="category" class="form-input" required>
                        <option value="">Select a category</option>
                        <option value="vapes">Vapes</option>
                        <option value="pods">Pods</option>
                        <option value="eliquids">E-Liquids</option>
                        <option value="accessories">Accessories</option>
                    </select>
                </div>

                <!-- Price -->
                <div>
                    <label for="price" class="form-label required">Price (â‚¹)</label>
                    <input type="number" id="price" name="price" class="form-input" placeholder="0.00" min="0" step="0.01" required>
                </div>

                <!-- Stock Quantity -->
                <div>
                    <label for="stock" class="form-label required">Stock Quantity</label>
                    <input type="number" id="stock" name="stock" class="form-input" placeholder="0" min="0" required>
                </div>

                <!-- Product Images -->
                <div class="md:col-span-2">
                    <label for="productImages" class="form-label required">Product Images</label>
                    <label for="productImages" class="file-input-label">
                        <input type="file" id="productImages" name="productImages" class="hidden" accept="image/*" multiple required>
                        <span>Choose files (Max 5)</span>
                    </label>
                </div>

                <!-- Featured Product -->
                <div class="md:col-span-2">
                    <label class="flex items-center space-x-2 cursor-pointer">
                        <input type="checkbox" id="featured" name="featured" class="h-5 w-5 rounded text-purple-600">
                        <span class="text-gray-700">Mark as Featured Product</span>
                    </label>
                </div>
            </div>

            <div class="mt-8 flex justify-end">
                <button type="submit" class="submit-btn">Create Product</button>
            </div>
        </form>
    </div>
    
    <script>
        // File input preview functionality
        document.getElementById('colorImage').addEventListener('change', function(e) {
            const fileName = e.target.files[0]?.name || 'No file chosen';
            e.target.nextElementSibling.textContent = fileName;
        });
        
        document.getElementById('productImages').addEventListener('change', function(e) {
            const fileCount = e.target.files.length;
            e.target.nextElementSibling.textContent = fileCount > 0 ? 
                `${fileCount} file${fileCount > 1 ? 's' : ''} selected` : 
                'Choose files (Max 5)';
        });
    </script>
</body>
</html> 