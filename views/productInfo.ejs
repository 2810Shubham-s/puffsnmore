        .related-products-slider .swiper-button-next:after,
        .related-products-slider .swiper-button-prev:after {
            font-size: 14px;
            font-weight: bold;
        }
        
        .related-products-slider .swiper-wrapper {
            padding: 5px;
        }

        /* Related Products Grid - Keeping for fallback if JS fails */
